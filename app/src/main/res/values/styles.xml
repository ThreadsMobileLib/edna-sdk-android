<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BottomNavigationTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ChatButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/chat_button_background</item>
        <item name="android:textColor">@color/threads_white</item>
    </style>

    <!--Alternative Design-->
    <style name="AltFileDialogStyleTransparent" parent="Theme.MaterialComponents.Light.Dialog.Bridge">
        <item name="android:textColor">@android:color/holo_blue_light</item>
    </style>

    <style name="QuickReplyButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/threads_quick_reply_button_background</item>
        <item name="android:textColor">@color/threads_quick_reply_button_text</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="ThemeOverlay.ChatCenter.Slider.User" parent="">
        <item name="colorPrimary">@color/threads_white</item>
    </style>

    <style name="ThemeOverlay.ChatCenter.Slider.Consult" parent="">
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="ThemeOverlay.ChatCenter.Slider.Preview" parent="">
        <item name="colorPrimary">@color/threads_black</item>
    </style>

</resources>
